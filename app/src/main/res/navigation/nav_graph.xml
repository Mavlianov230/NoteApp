<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/onBoardFragment">

    <fragment
        android:id="@+id/onBoardFragment"
        android:name="com.example.noteapp.ui.Activity.Onboard.Fragment.OnBoardFragment"
        android:label="fragment_on_board"
        tools:layout="@layout/fragment_on_board" />

    <fragment
        android:id="@+id/onBoardPagerFragment"
        android:name="com.example.noteapp.ui.Activity.Onboard.Fragment.OnBoardPagerFragment"
        android:label="fragment_on_board_pager"
        tools:layout="@layout/fragment_on_board_pager" >
        <action
            android:id="@+id/action_onBoardPagerFragment_to_noteFragment"
            app:destination="@id/noteFragment"

            />
    </fragment>

    <fragment
        android:id="@+id/noteFragment"
        android:name="com.example.noteapp.ui.Activity.Onboard.Note.NoteFragment"
        android:label="fragment_note"
        tools:layout="@layout/fragment_note" >
        <action
            android:id="@+id/action_noteFragment_to_noteDetailFragment"
            app:destination="@id/noteDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>

    <fragment
        android:id="@+id/noteDetailFragment"
        android:name="com.example.noteapp.ui.Activity.Onboard.Note.NoteDetailFragment"
        android:label="fragment_note_detail"
        tools:layout="@layout/fragment_note_detail" />
</navigation>
